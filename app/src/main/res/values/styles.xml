<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MyAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">@color/themeColorBlue</item>
    </style>

    <style name="accountHint" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:alpha">0.7</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/themeColorBlack</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="accountEditText" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:background">@drawable/account_bg_edittext</item>
        <item name="android:padding">0dp</item>
        <item name="android:paddingStart">18dp</item>
        <item name="android:paddingEnd">18dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:radius">18dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/textInputColor</item>
    </style>

    <style name="accountButton" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">280dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@drawable/common_bg_button</item>
        <item name="android:padding">0dp</item>
        <item name="android:radius">20dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="accountSVGIcon">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:color">@color/themeColorBlue</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:alpha">0.9</item>
    </style>

</resources>
